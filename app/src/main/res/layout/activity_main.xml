<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#2A2D37"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBack"
        android:background="@mipmap/ic_launcher_round"
        android:maxHeight="2dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLogin"
        android:layout_below="@+id/imgBack"
        android:text="Log In"
        android:layout_marginTop="25dp"
        android:textColor="#F7F7F7"
        android:textSize="40sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:id="@+id/inputGroup">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tbUsername"
            android:hint="Username"
            android:padding="30px"
            android:textColor="#ddd"
            android:textColorHint="#aaa"
            android:backgroundTint="#eee"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tbPassword"
            android:hint="Password"
            android:padding="30px"
            android:textColor="#ddd"
            android:textColorHint="#aaa"
            android:backgroundTint="#eee"
            android:drawableLeft="@android:drawable/ic_menu_search" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtIncorrectPassword"
            android:text="Incorrect password."
            android:textColor="#e86161"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogin"
            android:text="Log in"
            android:textColor="#fff"
            android:textSize="20sp"
            android:background="@drawable/square_btn"
            android:layout_marginTop="40dp"
            android:padding="20dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSignUp"
        android:layout_below="@+id/inputGroup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#eee" />

</RelativeLayout>